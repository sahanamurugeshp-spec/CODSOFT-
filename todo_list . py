tasks = []

while True:
    print("\nTo-Do List")
    print("1. Add Task")
    print("2. View Tasks")
    print("3. Exit")

    choice = input("Enter choice: ")

    if choice == "1":
        task = input("Enter task: ")
        tasks.append(task)
        print("Task added!")

    elif choice == "2":
        if not tasks:
            print("No tasks found")
        else:
            for i in range(len(tasks)):
                print(i + 1, tasks[i])

    elif choice == "3":
        print("Goodbye!")
        break

    else:
        print("Invalid choice")
